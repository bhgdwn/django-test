pipeline {
    agent any

    environment {
        DOCKERHUB_REPO = "bhangdawon/djangoapp"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set Version') {
            steps {
                script {
                    def VERSION = "v${BUILD_NUMBER}"
                    env.IMAGE_TAG = "${DOCKERHUB_REPO}:${VERSION}"
                    echo "Docker Image Tag â†’ ${IMAGE_TAG}"
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                // Docker login + build + push in same shell block
                withCredentials([usernamePassword(credentialsId: 'dockerhub',
                                                 usernameVariable: 'DOCKERHUB',
                                                 passwordVariable: 'DOCKERHUB_PSW')]) {
                    sh """
                        echo "Logging in to DockerHub..."
                        echo "${DOCKERHUB_PSW}" | docker login -u "${DOCKERHUB}" --password-stdin
                        
                        echo "Building Docker image..."
                        docker build -t ${IMAGE_TAG} .
                        
                        echo "Pushing Docker image..."
                        docker push ${IMAGE_TAG}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "ðŸŽ‰ ì„±ê³µ! DockerHub Push + Kubernetes Deploy ì™„ë£Œ!"
        }
        cleanup {
            sh "docker system prune -af"
        }
    }
}
